<!-- Parametric Modeling (PMG) extension for SketchUp. -->
<!DOCTYPE html>
<html lang="<%= Sketchup.get_locale %>">

<head>

    <meta charset="UTF-8">
    
    <meta name="x-copyright" content="Â© 2021 Samuel Tallet">
    <meta name="x-license" content="GNU General Public License 3.0">

    <title><%= NAME %></title>
    
    <%= scripts['libraries/pep.min.js'] %>
    <%= scripts['libraries/lodash.min.js'] %>
    <%= scripts['libraries/vue.min.js'] %>
    <%= scripts['libraries/rete.min.js'] %>
    <%= scripts['libraries/rete/vue-render-plugin.min.js'] %>
    <%= scripts['libraries/rete/connection-plugin.min.js'] %>

    <script>SketchUpMaterials = <%= Materials.list.to_json %></script>
    <script>SketchUpLayers = <%= Layers.list.to_json %></script>
    <script>PMGNodesEditorSchemaVersion = '<%= NodesEditor::SCHEMA_VERSION %>'</script>
    <script>PMGNodesEditorIcons= <%= NodesEditor.icons.to_json %></script>
    <script>PMGNodesEditorSchema = <%= NodesEditor.schema.to_json %></script>

    <%= scripts['libraries/context-menu.js'] %>
	<%= scripts['nodes-editor.js'] %>

	<%= styles['nodes-editor.css'] %>

</head>

<body>

    <div id="pmg-nodes-editor">

        <div class="toolbar">

            <img class="icon" data-node-name="Draw box" />
            <img class="icon" data-node-name="Draw prism" />
            <img class="icon" data-node-name="Draw cylinder" />
            <img class="icon" data-node-name="Draw pyramid" />
            <img class="icon" data-node-name="Draw cone" />
            <img class="icon" data-node-name="Draw sphere" />

            <img class="icon" data-node-name="Number" />
            <img class="icon" data-node-name="Add" />
            <img class="icon" data-node-name="Subtract" />

            <img class="icon" data-node-name="Point" />
            <img class="icon" data-node-name="Vector" />

            <img class="icon" data-node-name="Push/Pull" />
            <img class="icon" data-node-name="Move" />
            <img class="icon" data-node-name="Rotate" />
            <img class="icon" data-node-name="Scale" />
            <img class="icon" data-node-name="Copy" />

        </div>

    </div>

</body>

</html>
